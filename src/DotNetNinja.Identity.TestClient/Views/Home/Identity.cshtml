@using Microsoft.AspNetCore.Authentication
@{
    ViewData["Title"] = "Identity";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-sm-12">
        <h2>Claims</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Properties</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
                {
                    <tr>
                        <td>@prop.Key</td>
                        <td>@prop.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

